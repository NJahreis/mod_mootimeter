<div class="container-fluid mootimetercontainer {{{containerclasses}}}">
  <div class="row ">
    <div class="mootimetercolpages col-lg-1  col-md-2 col-sm-3 col-xs-12 border-right">

      {{#isediting}}
      <form action="view.php" method="post" class="padding-left-5">
        <input type="hidden" name="id" value="{{cmid}}">
        <input type="hidden" name="a" value="addpage">
        <button type="submit" class="btn-success mootimetercardleftcol mootimeteraddpage {{mootimetercard}}">
          <p>{{#str}} add_page, mod_mootimeter {{/str}}</p>
        </button>
      </form>
      {{/isediting}}

      {{#pages}}
      <form action="" method="get" class="padding-left-5">
        <input type="hidden" name="id" value="{{cmid}}">
        <input type="hidden" name="pageid" value="{{pageid}}">
        <button type="submit" class="mootimetercardleftcol mootimeterpage {{mootimetercard}} {{active}}">
          <img src="{{{pix}}}" width="70%" style="margin: 0 auto;">
          <p>{{title}}</p>
        </button>
      </form>
      {{/pages}}

    </div>
    <div class="mootimetercolcontent {{#isediting}}col-lg-9  col-md-7{{/isediting}}{{^isediting}}col-lg-11 col-md-11{{/isediting}} col-sm-12 col-xs-12">
      {{{pagecontent}}}
    </div>

    {{#isediting}}
    <div class=" mootimetercolright {{{mootimetercolright}}} col-lg-2 col-sm-9 col-md-3 col-xs-12">
      {{#settings}}
      <hr>
      <div class="mootimetersettings mootimeterfullwidth">
        {{{settings}}}
      </div>
      {{/settings}}
    </div>
    {{/isediting}}

  </div>
</div>

{{#isediting}}
{{#js}}
require(['mod_mootimeter/edit'], (module) => module.init());
{{/js}}
{{/isediting}}